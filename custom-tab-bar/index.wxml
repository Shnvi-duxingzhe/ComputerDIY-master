      <view class="cuIcon-cu-image">
        <image src="/images/tabbar/basics_cur.png"></image>
      </view>
      <view class="text-green">元素</view>
    </view>
    <view class="action {{selected === 1 ? 'active' : 'default'}}" data-index="1" bindtap="switchTab">
      <view class="cuIcon-cu-image">
        <image src="/images/tabbar/component.png"></image>
      </view>
      <view class="text-gray">组件</view>
    </view>
    <view class="action {{selected === 2 ? 'active' : 'default'}}" data-index="2" bindtap="switchTab">
      <view class="cuIcon-cu-image">
        <image src="/images/tabbar/plugin.png"></image>
        <view class="cu-tag badge">99</view>
      </view>
      <view class="text-gray">扩展</view>
    </view>
    <view class="action {{selected === 3 ? 'active' : 'default'}}" data-index="3" bindtap="switchTab">
